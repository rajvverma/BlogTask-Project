<h1>Showing Blog Details </h1>
<p> <strong>Title: </strong><%= @blog.title %></p>
<p> <strong>Description: </strong><%= @blog.description %></p>
<% if logged_in? && @blog.user == current_user %>
	<%= link_to 'Edit', edit_blog_path(@blog) %> |
	<%= button_to 'Delete', blog_path(@blog), method: :delete, onclick: "return confirm('Are you sure you want to delete this blog?');"  %>
<% end %>
<%= link_to 'Return to blog listing', blogs_path %>

